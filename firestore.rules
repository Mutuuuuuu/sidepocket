rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ユーザーのプロフィール情報 (/users/{userId})
    match /users/{userId} {
      // 読み取りと更新は、自分自身のみ許可
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // アカウント作成は認証済みユーザーなら誰でも許可
      allow create: if request.auth != null;
    }

    // ユーザーのサブコレクション (projects, timestamps, clients, contacts)
    // 自分のデータに限り、すべての読み書きを許可します。
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // お知らせ情報 (/notifications/{notificationId})
    match /notifications/{notificationId} {
      // ログインしていれば誰でも読み取り可能
      allow read: if request.auth != null;
      // 書き込み（作成、更新、削除）は管理者のみ許可
      allow write: if request.auth.token.isAdmin == true;
    }

    // お問い合わせフォーム用コレクション (/contacts/{contactId})
    match /contacts/{contactId} {
        // お問い合わせの作成は誰でも許可
        allow create;
        // 読み書きは管理者のみ許可
        allow read, write: if request.auth != null && request.auth.token.isAdmin == true;
    }
  }
}